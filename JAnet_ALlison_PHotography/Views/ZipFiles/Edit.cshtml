@model JAnet_ALlison_PHotography.Models.ZipFile

@{
    ViewBag.Title = "Edit";
}

<section class="jumbotron col-lg-5 col-xs-12 py-3 mx-auto">
    <div class="container">
        <h1 class="jumbotron-heading text-center display-1">@ViewBag.Title</h1><br>
        @using (Html.BeginForm("Edit", "ZipFiles", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-8 col-xs-12 mx-auto", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.PurchasedPic_Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Customer_Id, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.Customer_Id, new SelectList(ViewBag.Customer, "Value", "Text"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Customer_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-md-10">
                        <input type="file" name="ImageFile" id="ImageFile" required>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateTaken, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DateTaken, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DateTaken, "", new { @class = "text-danger" })
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary m-2 col-xl-5 col-md-12 col-sm-12" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", "CustomerZipFile")
        </div>
    </div>
</section>