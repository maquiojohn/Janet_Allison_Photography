@model JAnet_ALlison_PHotography.Models.Booking
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Book An Appointment";
}
@section cssBooking {
    @Styles.Render("~/Content/BookingCSS.css")
}
<section class="jumbotron col-lg-5 col-xs-12 py-3 mx-auto">
    <div class="container">
        <h1 class="jumbotron-heading text-center display-4">@ViewBag.Title</h1><br>
        <p class="lead text-center">Please fill out the form below and then click 'Submit' to book an appointment with Janet Allison Photography.</p><br>

        <div class="row">
            <div id="carouselExampleCaptions" class="carousel slide col-lg-3 centerHeight" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                </div>
            </div>
            @ViewBag.BookSuccess
            <div class="col-lg-6 col-md-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.LabelFor(model => model.employee_Id, htmlAttributes: new { @class = "col-form-label" })
                            <div>
                                @Html.DropDownListFor(m => m.employee_Id, new SelectList(ViewBag.Employee, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.employee_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-form-label" })
                                <div>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @Value = User.Identity.GetUserName() })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                        <div>
                            @Html.LabelFor(model => model.dateTime, htmlAttributes: new { @class = "col-form-label" })
                            <div>
                                @Html.EditorFor(model => model.dateTime, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dateTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div>
                            @Html.LabelFor(model => model.PhotoType, htmlAttributes: new { @class = "col-form-label" })
                            <div>
                                @Html.DropDownListFor(m => m.PhotoType, new SelectList(ViewBag.photoType, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PhotoType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div>
                            @Html.LabelFor(model => model.PhotoDetail, htmlAttributes: new { @class = "col-form-label" })
                            <div>
                                @Html.TextAreaFor(model => model.PhotoDetail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhotoDetail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div>
                            @Html.LabelFor(model => model.NumPeople, htmlAttributes: new { @class = "col-form-label" })
                            <div>
                                @Html.EditorFor(model => model.NumPeople, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumPeople, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div>
                            @Html.LabelFor(model => model.Medium, htmlAttributes: new { @class = "col-form-label" })<br />
                            @Html.RadioButtonFor(model => model.Medium, "Digital", new { Checked = "checked" })@("Digital")<br />
                            @Html.RadioButtonFor(model => model.Medium, "Printed")@("Printed")
                            @Html.ValidationMessageFor(model => model.Medium, "", new { @class = "text-danger" })<br /><br />
                        </div>
                        <div>
                            <div class="text-center">
                                <input type="submit" value="Submit" class="btn btn-primary m-2 col-xl-5 col-md-12 col-sm-12" /><br /><br />
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div id="carouselExampleCaptions" class="carousel slide col-lg-3 centerHeight" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/subscribe-overlay-cat.jpg" alt="Sample Photo" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>