@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleCaptions" class="carousel slide col-11 mx-auto" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1" class=""></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Pics/2593i.jpg" alt="Sample Photo" class="img-fluid" />
        </div>
        <div class="carousel-item">
            <img src="~/Pics/IMG_0126.jpg" alt="Sample Photo" class="img-fluid" />
        </div>
        <div class="carousel-item">
            <img src="~/Pics/6F0A7426-55.jpg" alt="Sample Photo" class="img-fluid" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<section class="jumbotron col-11 mx-auto py-3">
    <div class="container">
        <h1 class="jumbotron-heading text-center">Welcome To Janet Allison Photography</h1><br>
        <p class="lead text-center">Where we offer pictures that will bring cherished memories forever.</p><br>
        <ul class="list-group list-group-flush col-md-6 col-xs-12 mx-auto text-center">
            <li class="list-group-item">@Html.ActionLink("View Some Of Our Products", "Index", "StoreDetail", null, new { @class = "nav-link" })</li>
            <li class="list-group-item">@Html.ActionLink("Browse Our Gallery", "Gallery", "Home", null, new { @class = "nav-link" })</li>
            <li class="list-group-item">@Html.ActionLink("Create An Account With Us", "Register", "Account", null, new { @class = "nav-link" })</li>
            @if (!User.IsInRole("Admin") && !User.IsInRole("Employee") && !User.IsInRole("Customer"))
            {
                <li class="list-group-item">@Html.ActionLink("Login To Your Account", "Login", "Account", null, new { @class = "nav-link" })</li>
            }
                <li class="list-group-item">@Html.ActionLink("Book An Appointment", "Create", "Booking", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </section>